<div class = "header">
  <%= render "header" %>
</div>

<div class = "recipe">
  <% @recipes.each do |recipe| %>
    <div class = "recipe-content">
      <div class = "user-name">投稿者：<%= recipe.user.name %></div>
      <div class = "recipe-name">料理の名前：<%= link_to recipe.recipe_title, recipe_path(recipe.id) %></div>
      <div class = "recipe-image"><%= link_to image_tag(recipe.image), recipe_path(recipe.id) %></div>
      <div class = "recipe-caption">説明文：<%= recipe.caption %></div>
      <div class = "recipe-cooking-time">調理時間：<%= recipe.cooking_time %>分</div><br>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <br><%= link_to '投稿ページへ', new_recipe_path, class: "post-btn" %>
<% end %>