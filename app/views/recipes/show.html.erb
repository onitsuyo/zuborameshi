<h1>詳細ページ</h1>


<div>投稿者：<%= @recipe.user.name %></div>
<div>料理の名前：<%= @recipe.recipe_title %></div>
<div><%= image_tag @recipe.image %></div>
<div>料理の説明：<%= @recipe.caption %></div>
<div>調理時間：<%= @recipe.cooking_time %>分</div><br>
<div>
  <% @recipe.ingredients.each do |ingredient| %>
    材料：　<%= ingredient.ingredient_name %></div>
  <% end %>
</div>
<div>
  <% @recipe.seasonings.each do |seasoning| %>
    調味料：　<%= seasoning.seasoning_name %></div>
  <% end %>
</div>
<div>
  <% @recipe.procedures.each do |procedure| %>
    手順：　<%= procedure.step %></div>
  <% end %>
</div>


<% if user_signed_in? %> 
  <% if current_user.id == @recipe.user_id %>
    <%= link_to "編集する", edit_recipe_path(@recipe.id), method: :get %><br>
    <%= link_to "削除する", recipe_path(@recipe.id), method: :delete, data: { confirm: "削除しますか？" } %>
  <% end %>
<% end %>
<br><br>

<div>
  <%= link_to 'トップページに戻る', root_path %>
</div>